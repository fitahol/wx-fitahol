/**index.wxss**/
.fitahol-conatiner {
	padding-top:80rpx;
	height: 100%;
	background: #fff;
}
.snap {
	width: 100rpx;
	height: 100rpx;
	border-radius: 50%;
	text-align: center;
	line-height: 100rpx;
	font-size: 36rpx;
	position: fixed;
	bottom: 7rpx;
	z-index: 10000;
	background: rgba(55,66,174,.4);
	transition: right .7s ease
}
.snap image {
	vertical-align: top;
	margin-top: 14%;
}
.snap-hide {
	right: -300rpx;
}
.snap-show {
	right: 0;
}
.userinfo {
	display: flex;
	flex-direction: column;
	align-items: center;
}

.title-MY{
	position: fixed;
	left: 0;
	top: 0;
	z-index: 1000;
	color: #fff;
}
/**week-title**/
.week-title {
	position: fixed;
	z-index: 999;
	top: 0;
	left: 0;
	background: #3742ae;
	display: flex;
	width: 100%;
	line-height: 20rpx;
	padding-left: 11%;
	box-sizing: border-box;
}
.week-title .week-title-item {
	flex: 1;
	text-align: center;
	color:#fff;
	position: relative;
	padding: 20rpx 0;
	font-size: 36rpx;
}
.week-title-item text:first-child {
	font-size: 22rpx;
}
.now-date:after {
	content: '';
	position: absolute;
	left: 0;
	bottom: 0;
	width: 100%;
	height: 3px;
	background: #fb5340;
}
.week-title text {
	display: block;
}
/*week-list-wrap*/
.week-list-wrap{
	width: 100%;
	height: 100%;
	text-align: center;
	position: absolute;
	left: 0;
	top: 80rpx;
}
.hour-list {
	width: 100%;
	background: #fff;
}
.hour-item {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	width: 100%;
	height: 120rpx;
	line-height: 120rpx;
	text-align: center;
	border-bottom: 1px solid rgb(230,230,230);
}

.hour-space-item {
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	flex: 1;
	border-right: 1px solid rgb(230,230,230);
	position: relative;
	z-index: 2;
	overflow: hidden;
}
.time-false {
	background: #edf0f5;
}
.hour-space-item image {
	width: 60%;
	height: 50%;
	border-radius: 50%;
	background: #fff;
	vertical-align: top;
	margin-top: 20%;
}
.mark-icon0:after {
	content: '';
	position: absolute;
	left: -70%;
	top: -50%;
	width: 100%;
	height: 100%;
	transform: rotate(45deg);
	background: rgba(55,66,174,.4);
	z-index: -1;
}
.mark-icon1:after {
	content: '';
	position: absolute;
	left: -70%;
	top: -50%;
	width: 100%;
	height: 100%;
	transform: rotate(45deg);
	background: #1AAD19;
	z-index: -1;
}
.mark-icon2:after {
	content: '';
	position: absolute;
	left: -70%;
	top: -50%;
	width: 100%;
	height: 100%;
	transform: rotate(45deg);
	background: #ccc;
	z-index: -1;
}

.mark-icon3:after {
	content: '';
	position: absolute;
	left: -70%;
	top: -50%;
	width: 100%;
	height: 100%;
	transform: rotate(45deg);
	background: #fb5340;
	z-index: -1;
}
.mark-icon-info {
	position: absolute;
	left: -32%;
	top: -30%;
	width: 50%;
	height: 50%;
	z-index: 10;
	font-size: 18rpx;
	transform: rotate(-45deg);
	color: #fff;
}
.hour-space-item text {
	font-size: 24rpx;
	line-height: 1em;
	height: 1em;
	width: 100%;
	text-align: center;
	overflow: hidden;
	position: absolute;
	word-break: normal;
	left: 0;
	right: 0;
	bottom: 6%;
	word-break: no-break;
}
.hour-active-item {
	background-color: #2b3297;
	opacity: .9;
	transition: all .5s ease;
	font-size: 1.4rem;
	color: #fff;
	z-index: 1;
}
.hour-item-title {
	width: 11%;
	border-right: 1px solid rgb(230,230,230);
	color: #666;
	font-size: 24rpx;
	background: #edf0f5;
}

.random-info-show-half {
	/*transform: translateY(56rpx);*/
	position: absolute;
	left: 0;
	top: -56rpx;
	z-index: 100;
	width: 100%;
	height: 100%;
	box-sizing: border-box;
}
.half-wrap {
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	flex: 1;
	border-right: 1px solid rgb(230,230,230);
	position: relative;
}
.random-info-show0 {
	background: #d5c3ed;
}
.random-info-show1 {
	background: #ebdac3;
}
.random-info-show2 {
	background: #c5cef6;
}
.random-info-show3 {
	background: #fbcee3;
}
.random-info-show4 {
	background: #d5f5c6;
}
.is-rest{
	background: rgb(230,230,230);
}
.is-rest text {
	bottom: 30%;
	color: #aaa;
}
