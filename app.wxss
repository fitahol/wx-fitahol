@import 'style/weui.wxss';
.gray-page {
	height: 100%;
	background: #edf0f5;
}

.container {
	height: 100%;
	display: flex;
	/*flex-direction: column;*/
	align-items: center;
	justify-content: space-between;
	box-sizing: border-box;
}
/*.footer {
	position: fixed;
	bottom: 0;
	left: 0;
	line-height: 3em;
